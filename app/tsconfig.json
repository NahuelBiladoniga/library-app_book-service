{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./build/src",
    "rootDir": "./src",
    "allowJs": false,
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules/*"
  ]
}
